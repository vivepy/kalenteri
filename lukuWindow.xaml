<Window x:Class="Kooste.lukuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kooste"
        mc:Ignorable="d"
        Title="lukuWindow" Height="452" Width="377">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="tiedosto">
                <MenuItem Header="sulje ikkuna" Click="Exit_Click"/>
                <MenuItem Header="tulosta" Click="Print_Click"/>
            </MenuItem>
            <MenuItem Header="asetukset">
                <MenuItem Header="tekstin koko" Click="tKoko_Click"/>
                <MenuItem Header="Fontti" Click="Fontti_Click"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="grid">
            <TextBlock x:Name="teksti" TextWrapping="Wrap" Text=""/>        
        </Grid>
    </DockPanel>
</Window>
